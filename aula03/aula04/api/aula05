const express = require('express');
const app = express();

// Rota para somar três números
app.get('/soma', (req, res) => {
    // Pegando os números da query string
    const { num1, num2, num3 } = req.query;

    // Convertendo para números inteiros
    const numero1 = parseFloat(num1);
    const numero2 = parseFloat(num2);
    const numero3 = parseFloat(num3);

    // Verificando se todos os números foram fornecidos
    if (isNaN(numero1) || isNaN(numero2) || isNaN(numero3)) {
        return res.status(400).send('Por favor, forneça três números válidos na query string: num1, num2 e num3.');
    }

    // Calculando a soma
    const soma = numero1 + numero2 + numero3;

    // Retornando o resultado
    res.send(`A soma de ${numero1}, ${numero2} e ${numero3} é: ${soma}`);
});

// Iniciando o servidor
const PORT = 3000;
app.listen(PORT, () => {
    console.log(`Servidor rodando na porta ${PORT}`);
});